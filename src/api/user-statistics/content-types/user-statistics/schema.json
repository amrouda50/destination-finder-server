{
  "kind": "collectionType",
  "collectionName": "user-statistics",
  "info": {
    "singularName": "user-statistics",
    "pluralName": "users-statistics",
    "displayName": "User Statistics",
    "description": "User statistics is user specific information which will help in making personalized recommendations"
  },
  "attributes": {
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user",
      "mappedBy": "statistics"
    },
    "visits": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::visits.visit",
      "inversedBy": "user"
    },
    "favouriteRegions": {
      "type": "component",
      "repeatable": true,
      "component": "selected.region"
    },
    "recommendations": {
      "type" : "relation",
      "relation": "manyToMany",
      "target": "api::region.region"
    },
    "groups": {
      "type": "component",
      "repeatable": true,
      "component": "groups.group"
    }
  }
}
